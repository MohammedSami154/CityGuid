<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/feature_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/mcdonalds"
            android:scaleType="centerCrop"

            />
        <TextView
            android:id="@+id/feature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mcdonald's"
            android:fontFamily="@font/brandon_grotesque_black_58a8a3e824392"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:rating="3.5"/>
        <TextView
            android:id="@+id/feature_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an features about Mcdonald's places and it's most asked meals, enjoy it!"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>
